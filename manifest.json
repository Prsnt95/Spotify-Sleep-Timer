{
  "manifest_version": 3,
  "name": "Spotify Web Sleep Timer",
  "version": "1.0.0",
  "description": "Add a sleep timer to Spotify Web Player. Automatically pause music after a set duration.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://open.spotify.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
